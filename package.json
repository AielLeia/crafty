{
  "name": "crafty",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "build": "tsc --noEmit ./src/main.ts && esbuild src/main.ts --bundle --platform=node --format=cjs --outfile=dist/main.js",
    "link": "pnpm run build && pnpm link --global",
    "test": "vitest --watch"
  },
  "bin": {
    "crafty": "dist/main.js"
  },
  "devDependencies": {
    "@tsconfig/node-lts": "^20.1.1",
    "@types/node": "^20.11.19",
    "esbuild": "^0.20.0",
    "prettier": "^3.2.5",
    "typescript": "^5.2.2",
    "vitest": "^1.2.2"
  },
  "dependencies": {
    "commander": "^12.0.0"
  }
}
