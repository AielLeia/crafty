{
  "name": "crafty",
  "private": true,
  "version": "1.0.0",
  "type": "commonjs",
  "_moduleAliases": {
    "@": "dist"
  },
  "main": "dist/indes.js",
  "scripts": {
    "build:cli": "tsc --noEmit && node build.cli.cjs",
    "build:api": "tsc --noEmit && node build.api.cjs",
    "build:crafty": "pnpx prisma generate && tsc --noEmit && node build.crafty.cjs",
    "run:api": "node dist/api.js",
    "link": "pnpm run build:cli && pnpm link --global",
    "test": "vitest --watch --reporter verbose spec",
    "test:int": "vitest run --reporter verbose integration"
  },
  "bin": {
    "crafty": "dist/cli.js"
  },
  "devDependencies": {
    "@testcontainers/postgresql": "^10.7.1",
    "@tsconfig/node-lts": "^20.1.1",
    "@types/http-errors": "^2.0.4",
    "@types/node": "^20.11.19",
    "@vitest/coverage-v8": "^1.3.1",
    "esbuild": "^0.20.1",
    "esbuild-plugin-alias-path": "^2.0.2",
    "prettier": "^3.2.5",
    "typescript": "^5.3.3",
    "vite": "^5.1.4",
    "vitest": "^1.3.1"
  },
  "dependencies": {
    "@prisma/client": "5.10.0",
    "commander": "^12.0.0",
    "fastify": "^4.26.1",
    "http-errors": "^2.0.0",
    "module-alias": "^2.2.3",
    "prisma": "^5.10.0",
    "testcontainers": "^10.7.1"
  },
  "prisma": {
    "schema": "src/infrastructure/prisma/schema.prisma"
  }
}
